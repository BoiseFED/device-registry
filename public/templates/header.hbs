<div class="form {{#if isFormHidden}}hidden{{/if}}">
  <div class="wrap">
    <h2>ADD DEVICE</h2>
    <form>
      <table>
        <tr>
          <td><label>NAME</label></td>
          <td><input type='text' name='name' class='js-name'/></td>
          <td class="first"><label>SERIAL NO.</label></td>
          <td><input type='text' name='serial' class='js-serial-no'/></td>
        </tr>
        <tr>
          <td><label>LOCATION</label></td>
          <td class='js-location-container'></td>
          <td class="first"><label>FORM FACTOR</label></td>
          <td class='js-formfactor-container'></td>
        </tr>
        <tr>
          <td><label>OS</label></td>
          <td class='js-os-container'></td>
        </tr>
        <tr>
          <td><label>VERSION</label></td>
          <td><input type='text' name='version' class='js-version'/></td>
          <td class="save"><input type="submit" value="SAVE"/></td>
        </tr>
      </table>
    </form>
  </div>
