<div class="devices-container grid checkin">
  <div class="image">
    <span class="icon-stack">
      <i class="icon-alt-{{formfactor}} icon-stack-device"></i>
      <i class="icon-alt-{{os}} icon-stack-os"></i>
    </span>
  </div>
  <div class="device-info">
      <p>{{os}} {{version}}</p>
      <h5>{{name}} <i class="icon-poo"></i></h5>
      <p>Serial: {{serial}}</p>
      <p>Location: {{location}} <i class="icon-truck"></i></p>
      <p>Form Factor: {{formfactor}}</p>

      <!-- inputs to replace text above when in edit mode -->
      <input type="text" class="author" placeholder="Windows 8"/>
      <input type="text" class="author" placeholder="IBM Thinkpad"/>
      <input type="text" class="author" placeholder="Serial"/>
      <label>Form Factor:</label>
      <select>
        <option>Phone</option>
        <option>Tablet</option>
        <option>Laptop</option>
        <option>Misc</option>
      </select>
      <a href="#" class="device-error save">SAVE</a>
      <!-- End -->

      <!-- Edit form for if the device moves location -->
      <label>Where would you like to send this device?</label>
      <select>
        <option>Boise</option>
        <option>Chicago</option>
        <option>LA</option>
        <option>Seattle</option>
      </select>
      <a href="#" class="device-error move">MOVE</a>
      <!-- End -->

      <div class="device-actions">
        {{#if isCheckedOut}}
          <a href="#" class="check-in"><i class="icon-check-in"></i>CHECK IN</a>
        {{else}}
          <a href="#" class="check-out"><i class="icon-check-out"></i>CHECK OUT</a>
        {{/if}}
        {{!--
          <a href="#" class="device-error icon-warning">DEVICE ERROR</a>
          --}}
      </div>
  </div>
  <div class="comment-form">
    <textarea class="comment-text"></textarea>
    <input type="text" class="author" placeholder="author"/><a href="#" class="comment">Add comment</a>
  </div>
  <div class="comments">

      <h2>Comments</h2>
      <section>
        {{#each comments}}
          <div class="{{type}}">
            <p>{{body}}</p>
            <p>{{timeago date}} by '{{author}}'</p>
            <hr/>
          </div>
        {{/each}}
      </section>
  </div>
</div>
